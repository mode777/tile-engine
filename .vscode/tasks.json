{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build:webview",
        "type": "shell",
        "command": "npm",
        "args": [
            "run",
            "build"
        ],
        "options": {
            "cwd": "${workspaceFolder}/webview"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": []
    },
    {
        "label": "compile:extension",
        "type": "shell",
        "command": "npm",
        "args": [
            "run",
            "compile"
        ],
        "options": {
            "cwd": "${workspaceFolder}/extension"
        },
        "group": "build",
        "problemMatcher": [
            "$tsc"
        ]
    },
    {
        "label": "build:all",
        "dependsOn": [
            "build:webview",
            "compile:extension"
        ],
        "dependsOrder": "sequence",
        "group": "build"
    }
]
}
